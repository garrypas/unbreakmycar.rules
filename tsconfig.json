{
  "compilerOptions": {
    "module": "None",
    "target": "ES6",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "paths": {
      "@garrypas/unbreakmycar.rules": ["./src"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}